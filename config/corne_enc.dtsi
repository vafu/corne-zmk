/ {
    // Define skeleton for the left encoder
    encoder_left: encoder_1 {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
    };

    // Define skeleton for the right encoder
    encoder_right: encoder_2 {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
    };

    chosen {
        zmk,kscan = &direct_keys;
    };

        direct_keys: direct_keys {
            compatible = "zmk,kscan-gpio-direct";
            status = "okay";
            input-gpios = <&pro_micro 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // Encoder Press Pin
        };
    kscan_composite: kscan_composite {
        compatible = "zmk,kscan-composite";
        matrix {
            kscan = <&kscan0>;
        };
        direct {
            kscan = <&direct_keys>;
            row-offset = <4>;
        };
    };
};
