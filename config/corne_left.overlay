#include "corne_enc.dtsi" 

&encoder_left {
    status = "okay";
    a-gpios = <&pro_micro 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; 
    b-gpios = <&pro_micro 16 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; 
};


/ {
    chosen {
        zmk,kscan = &kscan_composite;
    };

    kscan_composite: kscan_composite {
        compatible = "zmk,kscan-composite";
        matrix {
            kscan = <&kscan0>;
        };
        direct {
            kscan = <&direct_keys>;
            col-offset = <42>;
        };

        direct_keys: direct_keys {
            compatible = "zmk,kscan-gpio-direct";
            input-gpios = <&pro_micro 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // Encoder Press Pin
        };
    };
};
